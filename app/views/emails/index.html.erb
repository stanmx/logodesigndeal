<div class="page-header">
    <h2>Listing emails</h2>
</div>

<div class="input-append">
  <%= form_tag emails_path, :method => :get do %>
    <%= text_field_tag :search, params[:search], :placeholder => "Type address...", :class => 'input-large', :id => 'appendedInputButton' %>
    <%= button_tag "Search", :name => nil, :class => 'btn' %>
  <% end %>
</div>

<div class="row-fluid">
<table class="table table-bordered table-responsive">
  <tr>
    <th>Address</th>
    <th colspan="3">Actions</th>
  </tr>

<% @emails.each do |email| %>
  <tr>
    <td><%= email.address %></td>
    <td><%= link_to 'Show', email %></td>
    <td><%= link_to 'Edit', edit_email_path(email) %></td>
    <td><%= link_to 'Destroy', email, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<%= pagination_links @emails, :previous_label => '&laquo;', :next_label => '&raquo;' %>
<%= link_to 'New Email', new_email_path, :class => 'btn btn-primary' %>

</div>
