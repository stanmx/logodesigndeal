<div class="page-header">
    <h2>Listing mails</h2>
</div>

<div class="input-append">
  <%= form_tag mails_path, :method => :get do %>
    <%= text_field_tag :search, params[:search], :placeholder => "Type address...", :class => 'input-large', :id => 'appendedInputButton' %>
    <%= button_tag "Search", :name => nil, :class => 'btn' %>
  <% end %>
</div>

<div class="row-fluid">
<table class="table table-bordered table-responsive">
  <tr>
    <th>Address</th>
    <th colspan="3">Actions</th>
  </tr>

<% @mails.each do |mail| %>
  <tr>
    <td><%= mail.address %></td>
    <td><%= link_to 'Show', mail %></td>
    <td><%= link_to 'Edit', edit_mail_path(mail) %></td>
    <td><%= link_to 'Destroy', mail, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<%= pagination_links @mails, :previous_label => '&laquo;', :next_label => '&raquo;' %>
<%= link_to 'New Mail', new_mail_path, :class => 'btn btn-primary' %>

</div>
