<div class="page-header">
  <h2><%= @post.title %></h2>
</div>

<div class="row-fluid">
  <%= image_tag @post.photo.url(:medium).to_s, :class => 'medium_photo' if @post.photo? %>
  <%= raw @post.content %>
  <h5>Tags: <%= @post.tag_list %></h5>
  <div class="actions">
    <%= link_to 'Edit', edit_post_path(@post), :class => 'btn' %>
    <%= link_to 'Back', posts_path, :class => 'btn' %>
  </div>

</div>