<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation" class="alert alert-block">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <h4><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h4>
      <br />
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row-fluid">
    
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title, :class => 'input-large', :placeholder => 'Type title...' %>
    </div>

    <div class="field">
      <%= f.label :tag_list, "Tags" %>
      <%= f.text_field :tag_list, :placeholder => "Type tags separated by commas..." %>
    </div>
  
    <div class="field infile">
      <%= f.label :photo %>
      <span class="btn fileinput-button">
        <em class="icon-picture icon-white"></em>
        <span>Select image</span><%= f.file_field :photo, :class => 'file' %>
      </span>
      <%= image_tag @post.photo.url(:medium).to_s, :class => 'medium_photo' if @post.photo? %>
    </div>

    <div class="field">
      <%= f.label :content %>
      <%= f.text_area :content, :class => 'wysihtml5 span11', :rows => 10, :placeholder => 'Type content...' %>
    </div>

  </div>

  <div class="actions">
    <%= f.submit :class => 'btn btn-primary' %>
  </div>
<% end %>