<%= form_for(@logo) do |f| %>
  <% if @logo.errors.any? %>
    <div id="error_explanation" class="alert alert-block">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <h4><%= pluralize(@logo.errors.count, "error") %> prohibited this logo from being saved:</h4>
      <br />
      <ul>
      <% @logo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row-fluid">
  <fieldset class="span6">
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title, :class => 'input-large', :placeholder => 'Type title...' %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description, :rows => 9, :class => 'input-large', :placeholder => 'Type description...' %>
    </div>
  </fieldset>
  <fieldset class="span6">
    <div class="field infile">
      <%= f.label :image %>
      <span class="btn fileinput-button">
        <em class="icon-picture icon-white"></em>
        <span>Select image</span><%= f.file_field :image, :class => 'file' %>
      </span>
      <%= image_tag @logo.image.url(:thumb).to_s, :class => 'thumb_logo' if @logo.image? %>
    </div>
    <hr />
    <h4>Add in...</h4>
    <div class="field">
      <%= f.label :carrousel, :class => 'checkbox inline' do %>
          <%= f.check_box :carrousel %> In home carrousel
      <% end %>
    </div>
    <div class="field">
      <%= f.label :slider, :class => 'checkbox inline' do %>
        <%= f.check_box :slider %> In gallery slider
      <% end %>
    </div>
  </fieldset>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-primary' %>
  </div>
<% end %>
