<div class="page-header">
    <h2>Listing logos</h2>
</div>

<div class="row-fluid">

<table class="table table-bordered table-responsive">
  <tr>
    <th>Title</th>
    <th>Image</th>
    <th>In home carrousel</th>
    <th>In gallery slider</th>
    <th colspan="3">Actions</th>
  </tr>

<% @logos.each do |logo| %>
  <tr>
    <td><%= logo.title %></td>
    <td><%= image_tag logo.image.url(:thumb).to_s if logo.image? %></td>
    <td><%= humanize(logo.carrousel) %></td>
    <td><%= humanize(logo.slider) %></td>
    <td><%= link_to 'Show', logo %></td>
    <td><%= link_to 'Edit', edit_logo_path(logo) %></td>
    <td><%= link_to 'Destroy', logo, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<%= pagination_links @logos, :previous_label => '&laquo;', :next_label => '&raquo;' %>
<%= link_to 'New Logo', new_logo_path, :class => 'btn btn-primary' %>

</div>
