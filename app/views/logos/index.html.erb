<h1>Listing logos</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Image</th>
    <th>Carrousel</th>
    <th>Slider</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @logos.each do |logo| %>
  <tr>
    <td><%= logo.title %></td>
    <td><%= logo.description %></td>
    <td><%= image_tag logo.image.url(:thumb).to_s if logo.image? %></td>
    <td><%= logo.carrousel %></td>
    <td><%= logo.slider %></td>
    <td><%= link_to 'Show', logo %></td>
    <td><%= link_to 'Edit', edit_logo_path(logo) %></td>
    <td><%= link_to 'Destroy', logo, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Logo', new_logo_path %>
